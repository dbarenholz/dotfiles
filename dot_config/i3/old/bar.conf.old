# Start i3bar to display a workspace bar (plus the system information i3status finds out, if available)
bar {
  position top
  font pango:MesloLGS Nerd Font Mono 10
  colors {
    background #171c28
    statusline #ffcc66
    separator #d7dce2
                       #border #bg     #text
    focused_workspace  #2f3b54 #2f3b54 #ffcc66
    active_workspace   #171c28 #171c28 #ffcc66
    inactive_workspace #171c28 #171c28 #d7dce2
    urgent_workspace   #ef6b73 #ef6b73 #1d2433
  }

  status_command i3status
}

